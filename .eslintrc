---
ecmaFeatures:
  modules: true

env:
  es6: true
  browser: true
  node: true

# 0: off, 1: warning, 2: error
rules:
  # semicolons are useless
  semi: [2, "never"]

  quotes: [2, "double"]

  # 2 spaces indentation
  indent: [2, 2]

  # trailing coma are cool for diff
  comma-dangle: [2, "always"]

  # enforce comma at eol (never before)
  comma-style: [2, "last"]

  # undefined variables
  no-undef: 2

  valid-jsdoc: 2
